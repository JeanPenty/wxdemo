<?xml version="1.0"?>
<include>
	<caption pos="0,0,-0,-0">
		<imgbtn name="btn_close" skin="skin_common_close"    pos="-50,0" tip="关闭" animate="1" cursor="hand"/>
		<imgbtn name="btn_max" skin="skin_common_max"  pos="-100,{0" animate="1" cursor="hand"/>
		<imgbtn name="btn_restore" skin="skin_common_restore"  pos="-100,{0" show="0" animate="1" cursor="hand"/>
		<imgbtn name="btn_min" skin="skin_common_min" pos="-150,{0" animate="1" cursor="hand"/>

		<caption pos="0,0,@250,-0" colorBkgnd="#F7F7F7" >
			<edit name="edit_msg_search"
				  pos="5,10,-5,@28"
				  colorBkgnd="rgb(220,224,228)"
				  align="left"
				  valign="center"
				  inset="20,0,25,0"
				  notifyChange="1"
				  font="face:微软雅黑,size:12"
				  autoWordSel="0"
				  colorText="#000000"
				  cueColor="rgb(100,100,100)"
				  cueText="搜索" />
			<imgbtn pos="[-20,{8" name="btn_msg_search_cancel" show="0" skin="skin_search_cancel" />
			<img pos="7,16" skin="skin_search"></img>
			
			<!--聊天列表-->
			<listview pos="0,48,-0,-0"
					  name="lv_message"
					  headHeight="0"
					  focuable="0"
					  sbWid="8"
					  sbSkin="skin_scrollbar"
					  colorBkgnd="#D8D8D8">
				<template itemHeight="64"
						  colorHover="#DAD8D8"
						  colorSelected="#CAC8C7"
						  trackMouseEvent="1">
					<caption pos="12,12,@40,@40" colorBkgnd="rgb(255,0,0)">
						<!--avatar-->
						<img name="item_avatar" pos="|-16,|-16"/>
					</caption>
					<caption pos="[5,0,-60,@32">
						<!--name-->
						<text name="item_name"
							  pos="0,0,-0,-0"
							  align="left"
							  valign="bottom"
							  dotted="1"
							  colorText="#282828"
							  font="face:微软雅黑,size:15" />
					</caption>
					<caption pos="{0,[0,-40,@32" margin="0,5,0,0">
						<!--content-->
						<text name="item_content"
							  pos="0,0,-0,-0"
							  align="left"
							  valign="top"
							  dotted="1"
							  colorText="#999999"
							  font="face:微软雅黑,size:12" />
					</caption>
					<caption pos="-60,0,-5,@25">
						<!--time-->
						<text name="item_time" 
							  pos="0,0,-0,-0" 
							  align="right" 
							  valign="center"
							  colorText="#999999"
							  font="face:微软雅黑,size:10"/>
					</caption>
					<caption pos="-40,[0,-0,-0">
						<!--reminder-->
						<img name="item_reminder" pos="|-16,|-16"/>
					</caption>
				</template>
			</listview>
		</caption>
		<caption pos="[0,50,-0,-0">

		</caption>
	</caption>
</include>
